<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:transitionName="registerTransition"
    android:background="@drawable/background_gradient"
    tools:context="registration_page">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            app:navigationIcon="@drawable/ic_arrow_back"
            app:titleTextColor="@color/white" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_register"
            tools:layout_editor_absoluteX="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="20dp"
                android:background="@color/offwhite"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/textView2"
                    android:src="@drawable/logo"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center_horizontal"

                    />

                <EditText
                    android:id="@+id/registerPage_input_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edt"
                    android:fontFamily="@font/lato"
                    android:hint="Enter name"
                    android:inputType="text"
                    android:paddingStart="9dp"
                    android:paddingLeft="9dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/Hintcolor"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/registerPage_input_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edt"
                    android:fontFamily="@font/lato"
                    android:hint="Enter email"
                    android:paddingStart="9dp"
                    android:paddingLeft="9dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/Hintcolor"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/registerPage_input_passowrd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edt"
                    android:fontFamily="@font/lato"
                    android:hint="Enter password"
                    android:inputType="textPassword"
                    android:paddingStart="9dp"
                    android:paddingLeft="9dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/Hintcolor"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/r_cnfpass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edt"
                    android:fontFamily="@font/lato"
                    android:hint="Confirm password"
                    android:paddingStart="9dp"
                    android:paddingLeft="9dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/Hintcolor"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/registerPage_input_button_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/btn"
                    android:fontFamily="@font/lato"
                    android:text="submit"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>